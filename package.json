{
  "name": "copilot-extnsn",
  "displayName": "Copilot Extension - Context Graph Generator",
  "description": "Generate hierarchical context graphs using LSP for AI-assisted development",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:logicGraph.generateContextJSON"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "logicGraph.generateContextJSON",
        "title": "LogicGraph: Generate Index (Phase 1)"
      },
      {
        "command": "logicGraph.queryCodebase",
        "title": "LogicGraph: Query Codebase (Phase 2+3)"
      },
      {
        "command": "logicGraph.incrementalUpdate",
        "title": "LogicGraph: Incremental Update"
      },
      {
        "command": "logicGraph.viewReport",
        "title": "LogicGraph: View Indexing Report"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.5",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.0.0",
    "fuse.js": "^7.1.0",
    "ignore": "^7.0.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "bm25": "^0.1.1",
    "idf": "^0.1.2",
    "natural": "^8.1.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.25.0",
    "tree-sitter-python": "^0.25.0",
    "tree-sitter-typescript": "^0.23.2"
  }
}
